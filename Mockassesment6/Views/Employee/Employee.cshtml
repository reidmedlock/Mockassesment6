
@model List<Employee>

<h2>Employees</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Age</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.Age</td>
                <td>@employee.Salary</td>
            </tr>
        }
    </tbody>
</table>

<h2>Retirement Info</h2>
<form method="post" asp-action="RetirementInfo">
    <label for="Id">Select Employee by Id:</label>
    <input type="number" name="id" required>
    <button type="submit">Submit</button>
</form>
